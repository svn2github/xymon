#!/bin/sh

# Configuration script for Hobbit.
# $Id$

BASEDIR="`dirname $0`"
TARGET="$1"
if test "$TARGET" = "--server" -o "$TARGET" = "--client"; then shift; fi

# Workaround SVN not preserving exec-permissions
chmod ugo+x $BASEDIR/configure.* $BASEDIR/build/*.sh

case "$TARGET" in
  "--client")
	$BASEDIR/configure.client $*
	;;

  "--server"|""|*)
	$BASEDIR/configure.server $*
	;;

  "--help")
  	echo "To configure a Hobbit server: $0 --server"
  	echo "To configure a Hobbit client: $0 --client"
	;;
esac

exit 0
